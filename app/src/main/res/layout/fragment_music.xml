<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.dahun.mobileplay.main.MainActivity">

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/restartBtn"
            android:text="restart"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/stopBtn"
            android:text="stop"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!---->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/play_3_emptycd">
                    <ImageView
                        android:id="@+id/play_2_trackImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/play_1_bg"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">
            <Button
                android:id="@+id/ic_homeBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp" />

            <Button
                android:id="@+id/ic_equalizerBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
/>
        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentTop="true">
                <Button
                    android:id="@+id/startBtn"
                    android:text="start"
                    android:layout_margin="5dp"
                    android:background="@drawable/play_ic_play"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <Button
                    android:id="@+id/pauseBtn"
                    android:text="pause"
                    android:background="@drawable/play_ic_pause"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
            </LinearLayout>

</LinearLayout>

        <!---->

        <LinearLayout
            android:layout_alignParentBottom="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스물셋"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_gravity="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:45"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="#F361A6"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:23"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:textColor="#8C8C8C"/>
            </RelativeLayout>
            <SeekBar
                android:id="@+id/musicProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/play_lyrics"
                    android:background="@drawable/play_ic_lyrics"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/paly_mode"
                    android:background="@drawable/play_ic_random"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/play_sound"
                    android:background="@drawable/play_ic_sound"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/play_list"
                    android:background="@drawable/play_ic_list"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/navi"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:background="@drawable/mn_default" />


        </LinearLayout>

    </RelativeLayout>



</LinearLayout>
